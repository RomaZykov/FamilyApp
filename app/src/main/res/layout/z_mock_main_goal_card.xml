<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewmodel"
            type="com.n1.moguchi.ui.viewmodels.MainActivityViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="15dp"
        card_view:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.n1.moguchi.ui.views.CurveProgressBarView
                android:id="@+id/goal_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/onest_regular"
                android:gravity="center"
                android:text="2 /10"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <!--                android:text="Цель - @{viewmodel.userName}"-->
            <TextView
                android:id="@+id/goal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/onest_regular"
                android:gravity="center"
                android:text="Велосипед"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/tasks_container_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

            </ListView>

            <Button
                android:id="@+id/all_tasks_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/arrow_r"
                android:fontFamily="@font/onest_regular"
                android:text="Смотреть 5 задач"
                android:textColor="@color/black" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>