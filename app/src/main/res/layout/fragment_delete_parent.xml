<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/delete_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_imageview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_page_height"
            android:scaleType="fitXY"
            android:src="@drawable/delete_image"
            app:layout_constraintBottom_toTopOf="@+id/title_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/title_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:fontFamily="@font/onest_regular"
            android:text="@string/delete_account"
            android:textColor="@color/black"
            android:textSize="@dimen/large_font_size"
            app:layout_constraintBottom_toTopOf="@id/tv_delete_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_imageview" />

        <TextView
            android:id="@+id/tv_delete_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/onest_regular"
            android:gravity="center"
            android:text="@string/delete_account_description"
            android:textColor="@color/black"
            android:textSize="@dimen/semi_small_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_delete" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
