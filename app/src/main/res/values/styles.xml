<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/light_orange</item>
    </style>

    <style name="CustomFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange</item>
        <item name="rippleColor">@color/white</item>
        <item name="borderWidth">4dp</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.FloatingActionButton
        </item>
    </style>

    <style name="Toolbar.TitleText.Medium" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:font" tools:targetApi="o">@font/onest_regular</item>
    </style>

    <style name="Toolbar.TitleText.Large" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:font" tools:targetApi="o">@font/onest_regular</item>
    </style>

    <style name="TextAppearance.Design.Hint.Small" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">8sp</item>
        <item name="android:font" tools:targetApi="o">@font/onest_regular</item>
    </style>

</resources>