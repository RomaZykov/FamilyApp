<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registrationFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.n1.moguchi.ui.activity.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.OnBoardingFragment"
        android:label="OnBoardingFragment">
        <action
            android:id="@+id/action_onBoardingFragment_to_addChildFragment"
            app:destination="@id/addChildFragment" />
    </fragment>
    <fragment
        android:id="@+id/addChildFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.AddChildFragment"
        android:label="AddChildFragment">
        <action
            android:id="@+id/action_addChildFragment_to_goalCreationFragment"
            app:destination="@id/goalCreationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.RegistrationFragment"
        android:label="RegistrationFragment">
        <action
            android:id="@+id/action_registrationFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_homeFragment"
            app:destination="@id/parentHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/parentHomeFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.ParentHomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_parentHomeFragment_to_addChildFragment"
            app:destination="@id/addChildFragment" />
        <action
            android:id="@+id/action_parentHomeFragment_to_parentProfileFragment"
            app:destination="@id/parentProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/parentProfileFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.ParentProfileFragment"
        android:label="fragment_parent_profile" >
        <action
            android:id="@+id/action_parentProfileFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_parentProfileFragment_to_addChildFragment"
            app:destination="@id/addChildFragment" />
        <action
            android:id="@+id/action_parentProfileFragment_to_parentHomeFragment"
            app:destination="@id/parentHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/goalCreationFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.GoalCreationFragment"
        android:label="GoalCreationFragment" />
    <fragment
        android:id="@+id/firstSlideFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.FirstSlideFragment"
        android:label="FirstSlideFragment" >
        <action
            android:id="@+id/action_firstSlideFragment_to_secondSlideFragment"
            app:destination="@id/secondSlideFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondSlideFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.SecondSlideFragment"
        android:label="SecondSlideFragment" >
        <action
            android:id="@+id/action_secondSlideFragment_to_thirdSlideFragment"
            app:destination="@id/thirdSlideFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdSlideFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.ThirdSlideFragment"
        android:label="ThirdSlideFragment" />
    <fragment
        android:id="@+id/switchToChildFragment"
        android:name="com.n1.moguchi.ui.fragments.parent.SwitchToChildFragment"
        android:label="SwitchToChildFragment" />
</navigation>