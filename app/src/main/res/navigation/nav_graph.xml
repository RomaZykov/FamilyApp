<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/starterFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.moguchi.ui.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/childStarterFragment"
        android:name="com.example.moguchi.ui.fragments.ChildStarterFragment"
        android:label="fragment_child_starter"
        tools:layout="@layout/fragment_child_starter">
        <action
            android:id="@+id/action_childStarterFragment_to_childWelcomeFragment"
            app:destination="@id/childWelcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.moguchi.ui.fragments.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_addChildFragment"
            app:destination="@id/addChildFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginRegistrationFragment"
        android:name="com.example.moguchi.ui.fragments.LoginRegistrationFragment"
        android:label="fragment_login_registration"
        tools:layout="@layout/fragment_login_registration" >
        <action
            android:id="@+id/action_loginRegistrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_loginRegistrationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/starterFragment"
        android:name="com.example.moguchi.ui.fragments.StarterFragment"
        android:label="fragment_starter"
        tools:layout="@layout/fragment_starter" >
        <action
            android:id="@+id/action_starterFragment_to_addChildNameFragment"
            app:destination="@id/childStarterFragment" />
        <action
            android:id="@+id/action_starterFragment_to_loginRegistrationFragment"
            app:destination="@id/loginRegistrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/childWelcomeFragment"
        android:name="com.example.moguchi.ui.fragments.ChildWelcomeFragment"
        android:label="fragment_child_welcome"
        tools:layout="@layout/fragment_child_welcome" >
        <action
            android:id="@+id/action_childWelcomeFragment_to_loginRegistrationFragment"
            app:destination="@id/loginRegistrationFragment" />
        <argument
            android:name="WelcomeFragmentArgs"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.moguchi.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/homeBottomFragment"
        android:name="com.example.moguchi.HomeBottomFragment"
        android:label="fragment_home_bottom"
        tools:layout="@layout/fragment_home_bottom" />
    <fragment
        android:id="@+id/childrenBottomFragment"
        android:name="com.example.moguchi.SettingsBottomFragment"
        android:label="fragment_children_bottom"
        tools:layout="@layout/fragment_settings_bottom" />
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.example.moguchi.ui.fragments.OnBoardingFragment"
        android:label="OnBoardingFragment" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.example.moguchi.ui.activities.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
    <fragment
        android:id="@+id/addChildFragment"
        android:name="com.example.moguchi.ui.fragments.AddChildFragment"
        android:label="AddChildFragment" >
        <action
            android:id="@+id/action_addChildFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
    </fragment>
</navigation>